    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug: build",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bonsai/main.py",
            "console": "integratedTerminal",
            "args": [
                "build",
                "--platform",
                "${input:platform}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "platform",
            "type": "pickString",
            "description": "Select the platform",
            "options": [
                "tangnano9k"
            ],
            "default": "tangnano9k"
        }
    ]
}