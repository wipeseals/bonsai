{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate verilog (current file)",
            "type": "shell",
            "command": "uv run ${file} generate ${fileBasenameNoExtension}.v",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "run pytest",
            "type": "shell",
            "command": "uv run pytest",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$python"
            ]
        }
    ]
}