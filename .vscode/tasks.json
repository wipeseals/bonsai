{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run current file",
            "type": "shell",
            "command": "uv run ${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "run pytest",
            "type": "shell",
            "command": "uv run pytest -v --ff -rfs",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "run pytest (current file)",
            "type": "shell",
            "command": "uv run pytest -v -s ${file}",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "draw diagram from verilog (win)",
            "type": "shell",
            "command": "environment.bat && cd dist && yosys -p \"read_verilog -sv ${file}; proc; opt; clean; show -format png -colors 2 -prefix ${fileBasenameNoExtension}\"",
            "problemMatcher": []
        }
    ]
}